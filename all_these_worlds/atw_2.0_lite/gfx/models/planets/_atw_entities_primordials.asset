## PRIMORDIAL WORLDS

# Hadean Class - Toxic and scorching environment, no life
entity = {
	name = "primordial_hadean_01_entity"
	pdxmesh = "planet_clouded_mesh"
	
	meshsettings = {
	name = "planet_geosphereShape"
	texture_diffuse = "primordial_hadean_01_diffuse.dds"
	texture_normal = "clouds_thin_normal.dds"
	texture_specular = "primordial_hadean_01_specular.dds"
	}	
	
	##cloud texture override
	meshsettings = {
	name = "clouds_geosphereShape"
	texture_diffuse = "atmosphere_toxic.dds"
	texture_normal = "nonormal.dds"
	texture_specular = "atmosphere_specular.dds"
	}
	
	##cloud shadow texture override
	meshsettings = {
	name = "clouds_shadow_geosphereShape"
	texture_diffuse = "atmosphere_shadow.dds"
	texture_normal = "nonormal.dds"
	texture_specular = "atmosphere_specular.dds"
	}
	
	##pole texture override
	meshsettings = {
	name = "polesShape"
	texture_diffuse = "nopoles_1_diffuse.dds"
	texture_normal = "poles_1_normal.dds"
	texture_specular = "nospec.dds"
	}
	
	default_state = "idle"
	state = { name = "idle" animation = "idle" time_offset = { 0 100 } 
		start_event = { trigger_once = yes sound = { soundeffect = "amb_planet_class" } }
		start_event = { trigger_once = yes sound = { soundeffect = "amb_planet_class_02" } }
	}
}
