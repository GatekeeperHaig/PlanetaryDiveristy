## PLACEHOLDER ENTITIES FOR PHASE 1 OF THE PLANETARY CONVERSION PROCESS

# Yellowish grid for Super-jovians
entity = {
	name = "atw_super_jovian_grid_01_entity"
	pdxmesh = "planet_no_pole_no_clouds_mesh"
	
	meshsettings = {
	name = "planet_geosphereShape"
	texture_diffuse = "_atw_super_jovian_grid_diffuse.dds"
	texture_normal = "nonormal.dds"
	texture_specular = "nospec.dds"
	}
	
	default_state = "idle"
	state = { name = "idle" animation = "idle" time_offset = { 0 100 }
		start_event = { trigger_once = yes sound = { soundeffect = "amb_planet_class" } }
		start_event = { trigger_once = yes sound = { soundeffect = "amb_planet_class_02" } }
	}
}
